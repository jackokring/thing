{
	"schemaVersion": 1,
	"id": "thing",
	"version": "${version}",
	"name": "Thing",
	"description": "A Fabric mod",
	"authors": [
		"Simon Jackson"
	],
	"contact": {
		"homepage": "https://github.com/jackokring/thing/blob/main/README.md",
		"sources": "https://github.com/jackokring/thing"
	},
	"license": "CC0-1.0",
	"icon": "assets/thing/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"uk.co.kring.thing.Thing"
		],
		"client": [
			"uk.co.kring.thing.ThingClient"
		],
		"fabric-datagen": [
			"uk.co.kring.thing.ThingDataGenerator"
		],
        "eiv": [
          "uk.co.kring.thing.EivIntegration"
        ],
        "modmenu": [
          "uk.co.kring.thing.MenuIntegration"
        ]
    },
	"mixins": [
		"thing.mixins.json",
		{
			"config": "thing.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": "${loader_version}",
		"minecraft": "${minecraft_version}",
		"java": "${java_version}",
		"fabric-api": "${fabric_version}",
        "cloth-config": "${cloth_config_version}"
    },
    "# modmenu is optional as you might not want to change the config": true,
    "suggests": {
        "appleskin-fabric": "*",
        "BetterF3": "*",
        "chat_heads": "*",
        "craftable-nametag": "*",
        "dynamic-fps": "*",
        "easyauth": "*",
        "eiv-fabric": "${eiv_version}",
        "ferritecore": "*",
        "Jade": "*",
        "lithium-fabric": "*",
        "mclogs-fabric": "*",
        "modmenu": "${modmenu_version}",
        "Scribble": "*",
        "StackDeobfuscatorFabric": "*"
    }
}